# LobeChat Vietnam Market Testing Environment Configuration
# Copy this file to .env.local for client-side testing or .env.development for server-side testing

########################################
########## Core Configuration #########
########################################

# Service mode - set to 'server' for full feature testing
NEXT_PUBLIC_SERVICE_MODE=server

# Application URL
APP_URL=http://localhost:3010

# Access code for security (optional)
ACCESS_CODE=your_access_code_here

########################################
########## Vietnam-Specific ###########
########################################

# Default language for Vietnam market
NEXT_PUBLIC_DEFAULT_LANG=vi-VN

# Currency settings
DEFAULT_CURRENCY=VND

# Custom pricing for Vietnam market (29,000 VND model)
DEFAULT_AGENT_CONFIG={"model":"gpt-3.5-turbo","temperature":0.7,"pricing":{"currency":"VND","rate":29000}}

# Mobile debugging for responsive testing
NEXT_PUBLIC_ENABLE_MOBILE_DEBUG=1

# Voice features for language learning
NEXT_PUBLIC_ENABLE_TTS=1
NEXT_PUBLIC_ENABLE_STT=1
TTS_DEFAULT_VOICE=vi-VN-HoaiMyNeural
STT_DEFAULT_LANGUAGE=vi-VN

########################################
########## AI Model Providers #########
########################################

# OpenAI (Primary provider)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_PROXY_URL=https://api.openai.com/v1
OPENAI_MODEL_LIST=gpt-3.5-turbo,gpt-4,gpt-4-turbo,gpt-4o

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Google AI
GOOGLE_API_KEY=your-google-ai-key-here

# Local Ollama (for offline testing)
OLLAMA_PROXY_URL=http://localhost:11434/v1

########################################
########## Database Configuration #####
########################################

# PostgreSQL connection
DATABASE_URL=postgresql://postgres:CHANGE_THIS_PASSWORD_IN_PRODUCTION@localhost:5432/lobechat

# Encryption key for sensitive data (generate with: openssl rand -base64 32)
KEY_VAULTS_SECRET=your_base64_key_here_generate_with_openssl_rand_base64_32

########################################
########## Authentication ##############
########################################

# Enable NextAuth
NEXT_PUBLIC_ENABLE_NEXT_AUTH=1

# NextAuth secret (generate with: openssl rand -base64 32)
NEXT_AUTH_SECRET=your_nextauth_secret_here_generate_with_openssl_rand_base64_32

# Auth URL
NEXTAUTH_URL=http://localhost:3010/api/auth

# SSO providers (using Casdoor for development)
NEXT_AUTH_SSO_PROVIDERS=casdoor

# Casdoor configuration
AUTH_CASDOOR_ISSUER=http://localhost:8000
AUTH_CASDOOR_ID=your_casdoor_client_id_here
AUTH_CASDOOR_SECRET=your_casdoor_client_secret_here

########################################
########## File Storage (S3/MinIO) ####
########################################

# MinIO/S3 configuration
S3_ACCESS_KEY_ID=admin
S3_SECRET_ACCESS_KEY=CHANGE_THIS_PASSWORD_IN_PRODUCTION
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=lobe
S3_PUBLIC_DOMAIN=http://localhost:9000
S3_ENABLE_PATH_STYLE=1
S3_SET_ACL=0

########################################
########## Performance Monitoring #####
########################################

# Enable analytics and monitoring
NEXT_PUBLIC_ENABLE_SENTRY=1
NEXT_PUBLIC_VERCEL_ANALYTICS=1

# API rate limiting for testing
API_RATE_LIMIT=100
API_RATE_WINDOW=3600


########################################
########## Docker Services Ports ######
########################################

# Service ports (for Docker setup)
LOBE_PORT=3010
CASDOOR_PORT=8000
MINIO_PORT=9000

# Database configuration
LOBE_DB_NAME=lobechat
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD_IN_PRODUCTION

########################################
########## Feature Flags ##############
########################################

# Enable specific features for testing
FEATURE_FLAGS=+vietnam_market,+mobile_optimization,+voice_features

# Search configuration
SEARXNG_URL=http://localhost:8080

########################################
########## Payment Integration #########
########################################

# Sepay Configuration (Vietnamese payment gateway)
# Get these credentials from https://my.sepay.vn/
SEPAY_API_KEY=your_sepay_api_key_here
SEPAY_ACCOUNT_NUMBER=your_bank_account_number_here
SEPAY_BANK_NAME=Vietcombank

# Sepay Webhook URL (for production)
# SEPAY_WEBHOOK_URL=https://yourdomain.com/api/sepay/webhook

# Stripe Configuration (existing payment provider)
# STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
# STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

########################################
########## Development Only ############
########################################

# Enable development features
NODE_ENV=development
NEXT_PUBLIC_ENABLE_DEBUG=1

# Disable telemetry for privacy
NEXT_TELEMETRY_DISABLED=1