{
  "buildCommand": "bun run build",
  "installCommand": "bun install",
  "functions": {
    "src/app/(backend)/**/*.ts": {
      "maxDuration": 60
    },
    "src/app/(backend)/**/*.tsx": {
      "maxDuration": 60
    },
    "src/app/api/**/*.ts": {
      "maxDuration": 60
    },
    "src/app/api/**/*.tsx": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/reset-lifetime-points",
      "schedule": "0 0 1 * *"
    }
  ],
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=16384 --expose-gc",
      "SENTRY_LOG_LEVEL": "warn",
      "NEXT_TELEMETRY_DISABLED": "1"
    }
  }
}