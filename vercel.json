{
  "buildCommand": "bun run build",
  "installCommand": "bun install",
  "functions": {
    "src/app/**/*.ts": {
      "maxDuration": 60
    },
    "src/app/**/*.tsx": {
      "maxDuration": 60
    }
  },
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=16384",
      "SENTRY_LOG_LEVEL": "warn"
    }
  }
}