{
  "name": "Lobe Chat Development",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:1-22-bookworm",
  
  "features": {
    "ghcr.io/devcontainer-community/devcontainer-features/bun.sh:1": {},
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "github.copilot",
        "github.copilot-chat",
        "augmentcode.augmentcode",
        "ms-vscode.makefile-tools",
        "ms-vscode-docker.vscode-docker",
        "prettier-vscode.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "ms-python.python"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "prettier-vscode.prettier-vscode"
      }
    }
  },

  "postCreateCommand": "npm install -g @github/copilot && npm install",
  "remoteUser": "node",
  "forwardPorts": [3000, 5173, 3001],
  "forwardPortsActivity": {
    "3000": "Lobe Chat",
    "5173": "Vite Dev Server",
    "3001": "API Server"
  }
}
